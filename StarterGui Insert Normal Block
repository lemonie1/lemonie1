-- this script is to be inserted in StarterGui.TextButton, not workspace.
-- this script is for the lava block spawn.

local button = script.Parent

button.MouseButton1Click:Connect(function()
	print("part inserted")
	
	for _, player in pairs(game.Players:GetPlayers()) do
		local character = player.Character
		if character then
			local humanoidRootPart = character:FindFirstChild("HumanoidRootPart")
			if humanoidRootPart then
				local part = Instance.new("Part")
				part.Size = Vector3.new(2,2,2)
				part.Parent = game.Workspace
				part.Position = humanoidRootPart.Position + Vector3.new(0,5,0) -- spawns the part 5 studs above the player
				part.Anchored = false
				part.Color = Color3.fromRGB(222, 0, 0)
				part.Material = Enum.Material.Neon
			end
		end
	end
end)
